_MODAL_MIN_WIDTH = 420px

.modal-overlay
	position fixed
	top 0
	left 0
	right 0
	bottom 0
	background-color color-fallback(rgba(51, 51, 51, 0.8))

	.modal
		position absolute
		top 50%
		left 50%
		z-index 1011
		min-width _MODAL_MIN_WIDTH
		box-shadow 0 4px 16px rgba(0, 0, 0, 0.2)
		transform translate(-50%, -50%)
